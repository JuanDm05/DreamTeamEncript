@{
    ViewData["Title"] = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="~/css/mediaquery.css" />
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        /* Estilos generales para el body */
        :root {
            --primary-color: #1e90ff;
            --secondary-color: #2ecc71;
            --bg-dark: #0f1c2e;
            --text-light: #e0e6ed;
            --accent-color: #34495e;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Roboto', 'Segoe UI', sans-serif;
            background: linear-gradient(135deg, var(--bg-dark) 0%, #2c3e50 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            perspective: 1000px;
            overflow: hidden;
        }

        .login-container {
            background-color: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(15px);
            border: 1px solid rgba(255, 255, 255, 0.125);
            padding: 2.5rem;
            border-radius: 15px;
            width: 100%;
            max-width: 400px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
            transform: rotateX(10deg) scale(0.95);
            transition: all 0.3s ease;
        }

        .login-container:hover {
            transform: rotateX(0) scale(1);
        }

        h2 {
            text-align: center;
            color: var(--text-light);
            margin-bottom: 1.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        h2 i {
            margin-right: 15px;
            color: var(--primary-color);
            font-size: 2rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
            position: relative;
        }

        label {
            display: block;
            color: var(--text-light);
            margin-bottom: 0.5rem;
            font-weight: 500;
        }

        input {
            width: 100%;
            padding: 0.75rem 1rem;
            background-color: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.2);
            border-radius: 8px;
            color: var(--text-light);
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 10px rgba(30, 144, 255, 0.4);
            outline: none;
        }

        input::placeholder {
            color: rgba(224, 230, 237, 0.5);
        }

        button {
            width: 100%;
            padding: 0.9rem;
            background-color: var(--primary-color);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        button:hover {
            background-color: #2980b9;
            transform: translateY(-3px);
        }

        button i {
            margin-right: 10px;
        }

        .error-message {
            background-color: rgba(220, 53, 69, 0.2);
            color: #ff6b6b;
            border: 1px solid rgba(220, 53, 69, 0.3);
            padding: 1rem;
            border-radius: 8px;
            text-align: center;
            margin-top: 1rem;
        }

        .register-link {
            text-align: center;
            margin-top: 1rem;
            color: var(--text-light);
        }

        .register-link a {
            color: var(--primary-color);
            text-decoration: none;
            transition: color 0.3s ease;
        }

        .register-link a:hover {
            color: #2980b9;
            text-decoration: underline;
        }

        footer {
            text-align: center;
            margin-top: 1.5rem;
            color: rgba(224, 230, 237, 0.6);
            font-size: 0.9rem;
        }

      
    </style>
</head>
<body>
    <div class="login-container">
        <h2>Iniciar Sesión</h2>

        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Usuario:</label>
                <input type="text" name="username" id="username" required />
            </div>

            <div class="form-group">
                <label for="password">Contraseña:</label>
                <input type="password" id="password" name="password"
                       minlength="8"
                       pattern="^(?=.*[A-Za-z])(?=.*\d)[A-Za-z\d$!%*?&]{8,}$"
                       title="La contraseña debe tener al menos 8 caracteres, incluyendo al menos una letra y un número."
                       required />
            </div>

            <button type="submit">Ingresar</button>
        </form>

        @if (ViewData["ErrorMessage"] != null)
        {
            <div class="error-message">
                @ViewData["ErrorMessage"]
            </div>
        }
        <div class="register-link">
            <p>¿Aún no tienes cuenta? <a asp-controller="Account" asp-action="Register">Regístrate</a></p>
        </div>
        <footer>&copy; 2024 - Sistema de Login</footer>
    </div>
</body>
</html>
